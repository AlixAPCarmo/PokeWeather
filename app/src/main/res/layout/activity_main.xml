<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.activity.PokeWeatherListActivity">

    <!-- The image will load in this ImageView -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="370dp"
        android:layout_height="90dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="@string/localizacao"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="102dp"
        android:layout_height="105dp"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toTopOf="@+id/tempView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tempView"
        android:layout_width="370dp"
        android:layout_height="90dp"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:text="Temperatura Atual: -- "
        android:textAlignment="center"
        android:textSize="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:id="@+id/llWeatherInfo"
        android:layout_width="270dp"
        android:layout_height="220dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempView">

        <TextView
            android:id="@+id/tvHumidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Humidity: --%"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tvFeelsLike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feels Like: --°"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tvTempMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Max Temp: --°"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tvTempMin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Min Temp: --°"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tvPressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pressure: -- hPa"
            android:textSize="28sp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
