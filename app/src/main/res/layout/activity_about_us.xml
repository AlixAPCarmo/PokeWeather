<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="@drawable/gradient_bg">

    <!-- Back Button -->
    <Button
        android:id="@+id/returnBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:contentDescription="Back Button"/>

    <!-- Image Container -->
    <LinearLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_below="@id/returnBtn"
        android:layout_marginTop="16dp">

        <!-- Developer Images with Shadows -->
        <ImageView
            android:id="@+id/imgAntonio"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:src="@drawable/antonio" />

        <ImageView
            android:id="@+id/imgAlix"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_weight="1"
            android:src="@drawable/alix" />
    </LinearLayout>

    <!-- Developer Info -->
    <LinearLayout
        android:id="@+id/devInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/imageContainer"
        android:layout_marginTop="16dp">

        <!-- Developer Names -->
        <TextView
            android:id="@+id/textoAntonio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="António Neves"/>

        <TextView
            android:id="@+id/textoAlix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="Alix Carmo "/>
    </LinearLayout>

    <!-- App Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/devInfoContainer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:elevation="2dp"
        android:text="Bem-vindo ao PokeWeather, a tua aplicação meteorológica! Desenvolvida por António Neves e Alix Carmo como parte da Unidade Curricular de Desenvolvimento de Aplicações Móveis na Escola Superior de Tecnologia de Tomar, lecionada pelos docentes José Casimiro Pereira e Paulo Santos, durante o ano letivo 2023/24."
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>
